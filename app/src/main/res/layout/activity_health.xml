<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepOutListActivity"
    android:orientation="vertical"
    android:padding="20dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="헬스장 인증"
            android:fontFamily="@font/pretendardsemibold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/ic_border_wblue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/line"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="78dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/line1"
        android:background="@color/background_skyblue"
        tools:layout_editor_absoluteX="-18dp">


        <android.widget.Button
            android:id="@+id/branch"
            android:layout_width="268dp"
            android:layout_height="176dp"
            android:layout_weight="5"
            android:background="@drawable/ic_border_wblue_button"
            android:text="헬스장 등록증을 \n업로드 해주세요"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="47dp" />

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="223dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="238dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="이름 : 김숭실"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="255dp" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="@color/gray"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/line"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="286dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="학번: 20222014"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="255dp" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="@color/gray"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/line"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="286dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="호실: 102호 B"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="255dp" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="@color/gray"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/line"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="286dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="기간: 2023.09.01 ~ 2023.12.23"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="255dp" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:background="@color/gray"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/line"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="286dp" />



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>