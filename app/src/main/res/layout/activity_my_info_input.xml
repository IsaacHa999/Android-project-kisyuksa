<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyInfoInputActivity">

    <LinearLayout
        android:id="@+id/ll_myinfoinput_l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_myinfoinput_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pretendardbold"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="23dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_myinfoinput_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/pretendardregular"
        android:text="이름을 입력해주세요."
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_myinfoinput_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/wgray"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:inputType="text"
        android:fontFamily="@font/pretendardregular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_name" />

    <TextView
        android:id="@+id/tv_myinfoinput_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardregular"
        android:inputType="text"
        android:text="거주중인 호실을 입력해주세요."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_myinfoinput_name" />


    <EditText
        android:id="@+id/et_myinfoinput_room"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@color/wgray"
        android:inputType="number"
        android:hint="101"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_room" />

    <TextView
        android:id="@+id/tv_myinfoinput_room2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/pretendardregular"
        android:gravity="center"
        android:text="호"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/et_myinfoinput_room"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_room" />

    <EditText
        android:id="@+id/et_myinfoinput_room3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@color/wgray"
        android:fontFamily="@font/pretendardregular"
        android:gravity="center"
        android:hint="A"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_myinfoinput_room2"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_room" />

    <TextView
        android:id="@+id/tv_myinfoinput_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendardregular"
        android:text="닉네임을 입력해주세요."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_myinfoinput_room" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_myinfoinput_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        app:counterEnabled="true"
        app:counterMaxLength="6"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_nickname">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_myinfoinput_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wgray"
            android:fontFamily="@font/pretendardregular"
            android:textColor="@color/black"
            android:maxLength="6"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_myinfoinput_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:fontFamily="@font/pretendardregular"
        android:text="성별을 선택해주세요."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textinput_myinfoinput_nickname" />

    <CheckBox
        android:id="@+id/cb_myinfoinput_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:fontFamily="@font/pretendardregular"
        android:text="남"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_gender" />

    <CheckBox
        android:id="@+id/cb_myinfoinput_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/pretendardregular"
        android:text="여"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/cb_myinfoinput_male"
        app:layout_constraintTop_toBottomOf="@+id/tv_myinfoinput_gender" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/ic_blue_btn"
        android:fontFamily="@font/pretendardsemibold"
        android:text="회원가입 완료"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="7:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>