<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/notice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="공지"
                android:textColor="@color/gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|center_horizontal">
                <TextView
                    android:id="@+id/notice_contents"
                    android:text="중간 간식 행사 - 임시 텍스트"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_skyblue"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <android.widget.Button
                    android:id="@+id/sleepover_apply_button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:text="외박"
                    android:paddingTop="50dp"
                    android:drawableTop="@drawable/ic_sleepover"
                    android:background="@drawable/ic_border_wblue_button" />

                <android.widget.Button
                    android:id="@+id/diet_button"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/sleepover_apply_button"
                    android:layout_weight="5"
                    android:background="@drawable/ic_border_wblue_button"
                    android:drawableTop="@drawable/ic_rice"
                    android:paddingTop="45dp"
                    android:text="식단" />
                <android.widget.Button
                    android:id="@+id/sleepover_list_button"
                    android:layout_below="@id/sleepover_apply_button"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:drawableTop="@drawable/ic_list"
                    android:paddingTop="25dp"
                    android:text="외박내역"
                    android:background="@drawable/ic_border_wblue_button" />
                <android.widget.Button
                    android:id="@+id/notice_button"
                    android:layout_toRightOf="@id/sleepover_list_button"
                    android:layout_below="@id/diet_button"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:drawableTop="@drawable/ic_notice"
                    android:paddingTop="30dp"
                    android:text="공지사항"
                    android:background="@drawable/ic_border_wblue_button" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:text="오늘의 식단"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="15dp"
                    android:text="식단사진"
                    android:background="@color/edit_text_gray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
