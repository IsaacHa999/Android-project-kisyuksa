<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SleepOutListDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="외박 신청 내역 상세보기"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목 23.10.25 ~ 23.10.27"
            android:fontFamily="@font/pretendardsemibold"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="@color/edit_text_gray"
            android:text="contents 본가 귀가로 외박 신청"
            android:fontFamily="@font/pretendardextrabold"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/fix_btn"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_blue_btn"
                android:fontFamily="@font/pretendardsemibold"
                android:textSize="20dp"
                android:text="수정"
                android:textColor="@color/white"/>
            <android.widget.Button
                android:id="@+id/delete_btn"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_blue_btn"
                android:fontFamily="@font/pretendardsemibold"
                android:textSize="20dp"
                android:text="삭제"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>