<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepOutApplicationActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/back_bnt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수리"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="visible"/>

<!--        <TextView
            android:id="@+id/title_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="분실물"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title_room_mate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="룸메이트"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subtitle_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="요청 내용을 적어주세요."
            android:fontFamily="@font/pretendardsemibold"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/subtitle_lost_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="분실물 관련 내용을 적어주세요."
            android:fontFamily="@font/pretendardsemibold"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/subtitle_room_mate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="룸메이트 관련 내용을 적어주세요."
            android:fontFamily="@font/pretendardsemibold"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="@color/edit_text_gray"
            android:hint="내용을 작성해주세요"
            android:fontFamily="@font/pretendardextrabold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="10dp">
            <android.widget.Button
                android:id="@+id/send_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_blue_btn"
                android:fontFamily="@font/pretendardsemibold"
                android:textSize="20dp"
                android:text="작성 완료"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>