<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepOutListActivity"
    android:orientation="vertical"
    android:padding="20dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="공동 배달"
            android:fontFamily="@font/pretendardsemibold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/ic_border_wblue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/line"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="78dp" />

    <TextView
        android:id="@+id/tommorow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내일"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="192dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="오늘"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tommorow"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="51dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/line1"
        android:background="@color/background_skyblue"
        tools:layout_editor_absoluteX="-18dp">

        <android.widget.Button
            android:id="@+id/branch"
            android:layout_width="210dp"
            android:layout_height="117dp"
            android:layout_weight="5"
            android:background="@drawable/ic_border_wblue_button"
            android:text="브런치"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="47dp" />

        <android.widget.Button
            android:id="@+id/lunch"
            android:layout_width="210dp"
            android:layout_height="117dp"
            android:layout_marginTop="40dp"
            android:layout_weight="5"
            android:background="@drawable/ic_border_wblue_button"
            android:text="점심"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/branch"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="80dp" />

        <android.widget.Button
            android:id="@+id/dinner"
            android:layout_width="210dp"
            android:layout_height="117dp"
            android:layout_marginTop="40dp"
            android:layout_weight="5"
            android:background="@drawable/ic_border_wblue_button"
            android:text="저녁"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/lunch"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="80dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>