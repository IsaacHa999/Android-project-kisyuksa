<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SleepOutApplicationActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/back_bnt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:id="@+id/type_repair"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="수리"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/type_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="분실물"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/type_room_mate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="룸메이트"
            android:fontFamily="@font/pretendardextrabold"
            android:layout_weight="1"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/fix_del_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="#2222"
                android:paddingRight="20dp">
                <android.widget.Button
                    android:id="@+id/fix_btn"
                    android:layout_margin="20dp"
                    android:layout_toLeftOf="@id/delete_btn"
                    android:layout_gravity="right"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_blue_btn"
                    android:fontFamily="@font/pretendardsemibold"
                    android:textSize="20dp"
                    android:text="수정"
                    android:textColor="@color/white"/>

                <android.widget.Button
                    android:id="@+id/delete_btn"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="right"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_blue_btn"
                    android:fontFamily="@font/pretendardsemibold"
                    android:textSize="20dp"
                    android:text="삭제"
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/edit_text_gray">

                <!--<TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="제목"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />-->
                <TextView
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/edit_text_gray"
                    android:fontFamily="@font/pretendardsemibold"
                    android:gravity="center"
                    android:text="작성한 내용 ex) 전자레인지를 고쳐주세요."
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pretendardsemibold"
                    android:text="2023.3.12"
                    android:textColor="@color/gray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/pretendardsemibold"
                    android:layout_margin="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
            <ScrollView
                android:id="@+id/comment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/box1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="invisible">
                        <TextView
                            android:id="@+id/user1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardextrabold"
                            android:textSize="16dp"
                            android:text="닉네임"/>
                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="comment 내용 ex) A동 2층 샤워실 고장"/>
                        <View
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/edit_text_gray"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/box2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="invisible">
                        <TextView
                            android:id="@+id/user2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardextrabold"
                            android:textSize="16dp"
                            android:text="닉네임"/>
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="comment 내용 ex) A동 2층 샤워실 고장"/>
                        <View
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/edit_text_gray"/>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/edit_text_gray"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/edit_text_gray"
                    android:layout_weight="9"
                    android:hint="댓글을 입력해주세요"/>
                <ImageButton
                    android:id="@+id/send_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_send_24"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>